
<% if @song.errors.any? %>
<div class="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
        <% end %>
    </ul>
</div>
<% end %>
<%= form_for @song do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>
<br/>
<%= f.label :genre %>
<%= f.text_field :genre %>
<br/>
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>
<br />
<p> Released? </p>
<%= f.label :released %>
<%= f.check_box :released %>
<!-- < f.label :released, "Yes", value: true >
< f.radio_button :released, true, :value => true > -->
<br />

<div>
    <p>Please include the release year if the song has been released: </p>
</div>

<%= f.label :release_year %>
<%= f.number_field :release_year %>
<!-- < f.select :release_year, (Time.now.year).downto(Time.now.year - 100).to_a, { :include_blank => true, :id => "song_release_year" } > -->
<br />
<%= f.submit %>
<% end %>
